= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :password_confirmation
    = f.text_field :password_confirmation
  .field
    = f.label :linked_in
    = f.text_field :linked_in
  .field
    = f.label :twitter
    = f.text_field :twitter
  .field
    = f.label :verified
    = f.check_box :verified
  .field
    = f.label :premium
    = f.check_box :premium
  .actions
    = f.submit 'Save'
